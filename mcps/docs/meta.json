{
  "id": "qp3Ts2uJntBY",
  "name": "docs",
  "type": "app",
  "secrets": {
    "base": "base"
  },
  "docker": {
    "default": {
      "root": "docker",
      "image": "gcr.io/ghostmind-core/${PROJECT}-${APP}",
      "env_based": false,
      "context_dir": "app"
    }
  },
  "compose": {
    "default": {
      "root": "local",
      "filename": "compose.yaml"
    }
  },
  "terraform": {
    "run": {
      "path": "infra",
      "global": false,
      "containers": ["default"]
    }
  },
  "mcp": {
    "_manage_global_docs": {
      "url": "${SERVER_URL}/mcp",
      "headers": {
        "Authorization": "Bearer ${SERVER_TOKEN}"
      }
    }
  }
}
